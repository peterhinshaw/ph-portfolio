<div id="columns">
<div class=product-listing>
<ul>
  <% products.each do |product| %>
    <% if Spree::Config[:show_zero_stock_products] || product.has_stock? %>
			<% if taxon.nil? %>
                               <li>
                                 <div class=imgg><%= link_to small_image(product), product %>
                                 <%= link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", product, :class => 'info' %>      
				 </div>
                                 <div class=product-item align="left">
                                    <% unless product.product_properties.empty? %>
				    
                                    <% for product_property in product.product_properties %>
					<p><%= product_property.property_name %>:
					<%=  product_property.value %></p>
			            <% end %> 				 
				    
				    <%= product_description(product) rescue t("product_has_no_description") %>
				    
				    <% end %>
                                 </div>
			       </li>
			  <% else %>
			    <li>
			       <div class=imgg><%= link_to small_image(product), product %>
                               <%= link_to product.name + "<span class='price selling'>#{product_price(product)}</span>", seo_url(taxon, product), :class => 'info' %> 
			       </div>
                                 <div class=product-item align="left">
                                    <% unless product.product_properties.empty? %>
				    
                                    <% for product_property in product.product_properties %>
					<p><%= product_property.property_name %>:
					<%=  product_property.value %></p>
			            <% end %> 				 
				    
				    <%= product_description(product) rescue t("product_has_no_description") %>
				    
				    <% end %>
				 </div>
                            </li>
		<% end %>
    <% end %>
  <% end %>
</ul>
</div>
</div>
<hr class="space" />
